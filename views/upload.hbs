<h1>Hírdetés feltöltése</h1>
<form class="form-horizontal col-lg-8 col-lg-offset-2"
      method="post" action="/user/upload">
  <fieldset>
    {{! Űrlapmező minta }}
    <!--
    <div class="form-group">
      <label for="" class="col-lg-2 control-label"></label>
      <div class="col-lg-10">
        <input type="" class="form-control" id="" placeholder="">
      </div>
    </div>
    -->
    <div class="form-group">
      <label for="name" class="col-lg-2 control-label">Név: </label>
      <div class="col-lg-10">
        <input type="text" class="form-control" 
               name="itemName" id="name" 
               placeholder="Hírdetés címe" required>
      </div>
    </div>
    
    <div class="form-group">
      <label for="price" class="col-lg-2 control-label">Megjelölt ár: </label>
      <div class="col-lg-10">
        <input type="number" class="form-control" 
               name="itemPrice" id="price"
               required>
     </div>
    </div>
    
    <div class="form-group">
      <label for="category" class="col-lg-2 control-label">Kategória: </label>
      <div class="col-lg-10">
        <select class="form-control" name="itemCategory" id="category">
          {{#each categoryData as |category|}}
          <option value="{{category.id}}" >{{category.categoryName}}</option>
          {{/each}}
        </select>
     </div>
    </div>
    
    <div class="form-group">
      <label for="description" class="col-lg-2 control-label">Leírás: </label>
      <div class="col-lg-10">
            <textarea class="form-control" rows="5" name="itemDescription" id="description"></textarea>
      </div>
     </div>   



    <div class="form-group">
      <div class="col-lg-8 col-lg-offset-2">
        <button type="reset" class="btn btn-default pull-left">Mégse</button>
        <button type="submit" class="btn btn-primary pull-right">Hozzáadás</button>
      </div>
    </div>
  </fieldset>
</form>