<h1>Kategóriák szerkesztése</h1>
<form class="form-horizontal col-lg-8 col-lg-offset-2"
      method="post" action="/op/categories">
  <fieldset>
      
    <div class="form-group">
      <label for="name" class="col-lg-2 control-label">Név: </label>
      <div class="col-lg-10">
        <input type="text" class="form-control" 
               name="categoryName" id="name" 
               placeholder="Új kategória neve" required>
      </div>
    </div> 

    <div class="form-group">
      <div class="col-lg-8 col-lg-offset-2">
        <button type="reset" class="btn btn-default pull-left">Mégse</button>
        <button type="submit" class="btn btn-primary pull-right">Hozzáadás</button>
      </div>
    </div>
    
  </fieldset>
</form>